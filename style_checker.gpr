
project Style_Checker is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("style_checker.adb");

   package Ide is
      for Vcs_Kind use "Git";
   end Ide;

   package Binder is
      for Default_Switches ("Ada") use ("-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnaty", "-O2");
   end Compiler;

end Style_Checker;
